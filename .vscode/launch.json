// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Process Notes",
        "program": "${workspaceFolder}/dist/index.js",
        "args": [
          "${env:HOME}/vaults/notes/Sprague2025/Notes2025",
          "-o",
          "output.md"
        ],
        "preLaunchTask": "npm: build"
      }
    ]
  }